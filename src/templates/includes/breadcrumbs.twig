<div class="breadcrumbs">
	<div class="container breadcrumbs__container">
		<ul class="breadcrumbs__list">
			<li class="breadcrumbs__li">

				<a href="#" class="breadcrumbs__back">
					<img src="assets/img/icons/left-arrow.png" alt="" class="breadcrumbs__back-img">
					<span class="breadcrumbs__back-text">Назад</span>
				</a>
			</li>
			<li class="breadcrumbs__li">
				<a href="#" class="breadcrumbs__link">
					<img src="assets/img/icons/house-outline.png" alt="" class="breadcrumbs__icon">
					<span class="breadcrumbs__text">Главная</span>
				</a>
			</li>

			{% for index in 0..2 %}
				<li class="breadcrumbs__li">
					<a href="#" class="breadcrumbs__link">
						<img src="assets/img/icons/meat.png" alt="" class="breadcrumbs__icon">
						<span class="breadcrumbs__text">Сытные пироги</span>
					</a>
					<div class="breadcrumbs__dropdown">
						<ul class="breadcrumbs__dropdown-list">
							{% for index in 0..7 %}
								<li class="breadcrumbs__dropdown-li">
									<a href="#" class="breadcrumbs__dropdown-link">
										<img src="assets/img/icons/meat.png" alt="" class="breadcrumbs__dropdown-icon">
										<span class="breadcrumbs__dropdown-text">Мясо</span>
									</a>
								</li>
							{% endfor %}
						</ul>
					</div>
				</li>
			{% endfor %}
		</ul>
	</div>

</div>
